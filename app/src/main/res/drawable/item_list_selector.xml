<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="1000">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:drawable="@color/colorPrimary" android:state_pressed="true" />

    <!-- Used when the view is "activated". -->
    <item android:drawable="@color/colorAccent" android:state_activated="true" />

    <item android:state_focused="true" android:drawable="@color/cardview_shadow_end_color" />
    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@android:color/transparent" />

</selector>