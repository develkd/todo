<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="90dp"
        android:text="Hi"
        android:textSize="18sp"
        android:theme="@style/ListStyleEditText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task_title"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/delete"
        android:background="@android:color/transparent"
        android:onClick="editTask"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:srcCompat="@drawable/edit_mode" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:onClick="deleteTask"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:srcCompat="@drawable/remove_circle"
        android:layout_alignBottom="@+id/task_title"
        android:layout_alignParentTop="true" />



</RelativeLayout>